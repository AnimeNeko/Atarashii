<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_window_focused="false">
        <shape android:shape="oval">
            <solid android:color="#f00" />
        </shape>
	</item>

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:state_enabled="false" android:state_focused="true" android:state_pressed="true">
		<shape android:shape="oval">
            <solid android:color="#f30" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="#b6b6b6" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#c7c7c7" />
        </shape>
	</item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#c7c7c7" />
        </shape>
	</item>
    <item android:state_focused="true">
		<shape android:shape="oval">
            <solid android:color="#60b9dc" />
        </shape>
	</item>
	<item android:state_enabled="false">
	    <shape android:shape="oval">
            <solid android:color="#FF6666" />
        </shape>
	</item>
</selector>
