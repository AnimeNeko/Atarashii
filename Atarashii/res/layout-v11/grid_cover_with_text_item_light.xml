<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp" 
    android:foreground="?android:selectableItemBackground"
    android:background="@drawable/card"
    android:paddingBottom="2dp"
    android:drawSelectorOnTop="true">

    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/transpanel" />

    <View
        android:id="@+id/textOverlayPanel"
        android:background="@android:color/white"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:layout_gravity="bottom"
        android:alpha="0.95" />

    <TextView
        android:id="@+id/animeName"
        style="@style/TextViewLightFont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="0px"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Anime Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/apptheme_stacked"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right" >

        <TextView
            android:id="@+id/watchedCount"
            style="@style/TextViewLightFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:text="111"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/apptheme_stacked"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/stringWatched"
            style="@style/TextViewLightFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/watchedCount"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/watchedCount"
            android:paddingBottom="5dp"
            android:text="I&apos;ve watched:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/apptheme_stacked"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/popUpButton"
        style="@style/Widget.Sherlock.ActionButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|left"
        android:focusable="false"
        android:paddingLeft="0dip"
        android:paddingRight="22dip"
        android:paddingTop="10dp"
        android:scaleType="center"
        android:src="@drawable/cover_action_dark" />

</FrameLayout>